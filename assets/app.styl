@import 'nib'
@import 'jeet'

global-reset()
reset-html5()

// reset button style
button
  appearance none
  border none
  padding 0
  margin 0
  background-color transparent

// vars
black = #222
yellow = #FDF100
white-bg = #fcfcfc
blue-bg = #B9E7F1
red-bg = #ff7f7f

container-max-width = 500px

// global
@font-face
  font-family 'Collegiate'
  src url('/COLLEGIA.ttf') format('truetype')

body
  font-family sans-serif
  font-smoothing subpixel-antialiased
  background-color white-bg

.container
  max-width container-max-width
  margin 0 auto

@import 'index'
@import 'lgtm'
@import 'lgtm_create'